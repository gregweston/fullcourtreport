ul.day-select
    for difference in [-3, -2, -1, 0, 1, 2, 3]
        li
            if difference == 0 
                span= moment(new Date(month + '/' + day + '/' + year)).add(difference, 'days').format('ddd M/D')
            else
                - var day_for_link = moment(new Date(month + '/' + day + '/' + year)).add(difference, 'days')
                a(href="/games/#{day_for_link.format('YYYY/M/D')}")= day_for_link.format('ddd M/D')
div.schedule 
    h2 All Games for 
        span= moment(new Date(month + '/' + day + '/' + year)).format('dddd, MMMM Do, YYYY')
    if games.event && games.event.length > 0
        ul
            each game in games.event
                - var away_nickname = game.away_team.last_name.toLowerCase().replace(' ', '-')
                - var home_nickname = game.home_team.last_name.toLowerCase().replace(' ', '-')
                li
                    a(href="/games/#{year}/#{month}/#{day}/#{away_nickname}/#{home_nickname}")
                        span.game-time= moment.tz(game.start_date_time, 'America/New_York').format('h:mm A (z)')
                        span(class="team #{away_nickname}") #{game.away_team.full_name}
                        span(class="team #{home_nickname}") #{game.home_team.full_name}
    else
        h3 No games found for this day.
            
