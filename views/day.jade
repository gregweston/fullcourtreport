div.schedule
    h2 All Games for #{date}
    ul
        each game in games.event
            - var away_nickname = game.away_team.last_name.toLowerCase()
            - var home_nickname = game.home_team.last_name.toLowerCase()
            if away_nickname === '76ers'
                - away_nickname = 'sixers'
            else if home_nickname === '76ers'
                - home_nickname = 'sixers'
            li
                a(href="#{game.away_team.last_name.toLowerCase()}/#{game.home_team.last_name.toLowerCase()}")
                    span(class="team #{away_nickname}") #{game.away_team.full_name}
                    span(class="team #{home_nickname}") #{game.home_team.full_name}